{
	"root": true,
	"env": {
		"browser": true,
		"es2017": true,
		"node": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2020
	},
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["svelte3"],
	"overrides": [{ "files": ["*.svelte"], "processor": "svelte3/svelte3" }],
	"rules": {
		"object-shorthand": "warn",
		"operator-assignment": "warn",
		"prefer-arrow-callback": "warn",
		"prefer-const": "warn",
		"prefer-destructuring": "warn",
		"prefer-template": "warn",
		"no-else-return": "warn",
		"curly": ["warn", "multi"]
	}
}
